DJANGO_SECRET_KEY=replace-with-a-strong-secret
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated origins with scheme, e.g. https://campusconnect.vercel.app
CORS_ALLOWED_ORIGINS=http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173

# JWT lifetime controls
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# Use DATABASE_URL in production (Render PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Optional: Redis-backed channels for multi-instance websocket scaling
# REDIS_URL=redis://localhost:6379/0
